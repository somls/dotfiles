[user]
 name = Default User
 email = user@example.com
[core]
 editor = code --wait
	quotepath = false
	precomposeunicode = true
[init]
 defaultBranch = main
[pull]
 rebase = true
[color]
 ui = auto

# 包含本地配置文件
[include]
 path = ~/.gitconfig.local

# 包含模块化配置文件
[include]
 path = ~/.config/git/gitconfig.d/core.gitconfig
[include]
 path = ~/.config/git/gitconfig.d/aliases.gitconfig
[include]
 path = ~/.config/git/gitconfig.d/color.gitconfig
[include]
 path = ~/.config/git/gitconfig.d/diff.gitconfig
[include]
 path = ~/.config/git/gitconfig.d/windows.gitconfig

# Note: Safe directories are configured locally per machine
# They should not be included in the shared gitconfig to avoid path conflicts
# Use gitconfig.local for machine-specific configurations
[credential "https://gitcode.com"]
	provider = generic
[credential "helperselector"]
	selected = manager
[gui]
	encoding = utf-8
[i18n]
	commitencoding = utf-8
	logoutputencoding = utf-8
